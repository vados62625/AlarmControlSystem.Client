<li class="page-item@(Active ? " active" : string.Empty)">
    @if (PageIndex != default)
    {
        <button class="page-link" onclick="@(async () => await OnPageClick.InvokeAsync(PageIndex.Value))" disabled="@Disabled">
            <span aria-hidden="true">@Text</span>
        </button>
    }
</li>

@code {
    [Parameter]
    public EventCallback<int> OnPageClick { get; set; }
    
    [Parameter]
    public int? PageIndex { get; set; }
    
    [Parameter]
    public bool Active { get; set; }
    
    [Parameter]
    public bool Disabled { get; set; }
    
    [Parameter]
    public string Text { get; set; }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
    }

}