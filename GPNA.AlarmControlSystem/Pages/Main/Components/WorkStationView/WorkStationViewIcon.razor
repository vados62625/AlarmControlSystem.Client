<div class="active-field@(Active ? $" {Alarm}" : "")">
    <p>@Title</p>
    <svg>
        <use href="/img/icons/icons.svg#@Alarm"></use>
    </svg>
</div>
    
@code {
    [Parameter] public string? Title { get; set; }
    [Parameter] public string? Alarm { get; set; }
    [Parameter] public bool Active { get; set; }
}