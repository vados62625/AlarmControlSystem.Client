@using GPNA.AlarmControlSystem.Application.Dto
@using GPNA.AlarmControlSystem.Models.Enums
@if (VisibleTablePriority)
{
    <table class="bg-table-priority">
        <tbody>
        <tr>
            <td colspan="2">Приоритет</td>
        </tr>
        <tr>
            <td>Низкий</td>
        </tr>
        <tr>
            <td>Высокий</td>
        </tr>
        <tr>
            <td>Критичный</td>
        </tr>
        </tbody>
    </table>
}

<table class="bg-table">
    <caption>@Title</caption>
    <thead>
    <tr>
        @foreach (var date in AlarmsCount.Keys)
        {
            <th>@date.ToString("dd.MM")</th>
        }
    </tr>
    </thead>
    <tbody>
    <tr>
        @foreach (var count in AlarmsCount.Values)
        {
            <td>@(count?.First(c => c.Priority == PriorityType.Low)?.CountDayPriority ?? 0)</td>
        }
    </tr>
    <tr>
        @foreach (var count in AlarmsCount.Values)
        {
            <td>@(count?.First(c => c.Priority == PriorityType.High)?.CountDayPriority ?? 0)</td>
        }
    </tr>
    <tr>
        @foreach (var count in AlarmsCount.Values)
        {
            <td>@(count?.First(c => c.Priority == PriorityType.Urgent)?.CountDayPriority ?? 0)</td>
        }
    </tr>
    </tbody>
</table>

@code {

    [Parameter]
    public DateTime DateTime { get; set; }

    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public bool VisibleTablePriority { get; set; } = false;

    [Parameter]
    public Dictionary<DateTimeOffset, CountAlarmsOnPriority[]> AlarmsCount { get; set; }

}