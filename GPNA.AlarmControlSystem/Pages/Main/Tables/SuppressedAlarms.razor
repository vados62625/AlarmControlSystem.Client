@using LocalDbStorage.Interfaces
@using LocalDbStorage.Repositories.Models
  
<div style="min-width:530px;">
        <h3 style="margin-top:50px;text-align: center;">@Title</h3>
        <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-light">
                <tr>
                    <th colspan=2>@From.ToString("M") - @To.ToString("M")</th>
                    <th>Пн</th>
                    <th>Вт</th>
                    <th>Ср</th>              
                    <th>Чт</th>
                    <th>Пт</th> 
                    <th>Сб</th>
                    <th>Вс</th> 
                </tr>
            </thead>            
            <tbody>
                <tr>
                    <th colspan=2>УПНГ</th>  
                    @if (AlarmsOnDay != null && AlarmsOnDay.Count > 0)
                    {
                        <td>@(AlarmsOnDay[0]!=null ? AlarmsOnDay[0].ToString() : "N/A")</td>
                        <td>@(AlarmsOnDay[1] != null ? AlarmsOnDay[1] : "N/A")</td>
                        <td>@(AlarmsOnDay[2] != null ? AlarmsOnDay[2] : "N/A")</td>
                        <td>@(AlarmsOnDay[3] != null ? AlarmsOnDay[3] : "N/A")</td>
                        <td>@(AlarmsOnDay[4] != null ? AlarmsOnDay[4] : "N/A")</td>
                        <td>@(AlarmsOnDay[5] != null ? AlarmsOnDay[5] : "N/A")</td>
                        <td>@(AlarmsOnDay[6] != null ? AlarmsOnDay[6] : "N/A")</td>
                    }
                    else
                    {
                        <td>N/A</td>
                        <td>N/A</td>
                        <td>N/A</td>
                        <td>N/A</td>
                        <td>N/A</td>
                        <td>N/A</td>
                        <td>N/A</td>
                    }
                                        
                </tr>
                <tr>
                    <th colspan=2>БМУПН</th>
                    <td>N/A</td>
                    <td>N/A</td>
                    <td>N/A</td>
                    <td>N/A</td>
                    <td>N/A</td>
                    <td>N/A</td>
                    <td>N/A</td>
                </tr>
                <tr>
                    <th colspan=2>Скважины</th>
                    <td>N/A</td>
                    <td>N/A</td>
                    <td>N/A</td>
                    <td>N/A</td>
                    <td>N/A</td>
                    <td>N/A</td>
                    <td>N/A</td>
                </tr>
                <tr>
                    <th colspan=2>Энергетика</th>
                    <td>N/A</td>
                    <td>N/A</td>
                    <td>N/A</td>
                    <td>N/A</td>
                    <td>N/A</td>
                    <td>N/A</td>
                    <td>N/A</td>
                </tr>            
             </tbody>
        </table>
    </div>
    </div>

@code {
    [Inject] ISuppressedAlarmService SuppressedAlarmService { get; set; } = null!;

    [Parameter] public string? Title { get; set; } = "Подавленные сигнализации"; 
    [Parameter] public List<List<IncomingAlarm>>? Alarms { get; set; }

    [CascadingParameter(Name = "From")] public DateTime From { get; set; }
    [CascadingParameter(Name = "To")] public DateTime To { get; set; }

    public List<int> AlarmsOnDay = new List<int>(7);




    protected override async Task OnInitializedAsync()    
    {


        //Получить список всех аварий Входящих/Активных/Подавленных за промежуток From - To 
        //IncomingAlarms = await RestService.GetAllIncomingAlarm();
        var suppressedAlarms= await SuppressedAlarmService.CountOfSuppressedAlarms(1, From, To);
        int i = 0;
        foreach (var count in suppressedAlarms)
        {
            if(count.Key == From.AddDays(i))
            {
                AlarmsOnDay.Add(count.Value);
                i++;
            }
        }
        
    }
}
