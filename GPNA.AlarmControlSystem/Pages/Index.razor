</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Дата</th>
                <th>Время</th>
                <th>Sourse</th>
                <th>Описание</th>
                <th>Приоритет 
                    <select @bind="@Priority">
                        <option value="0">All</option>
                        <option value="5">Alarm</option>
                        <option value="4">HH</option>
                        <option value="3">HI</option>
                        <option value="2">LO</option>
                        <option value="1">LL</option>
                </select></th>
            </tr>            
        </thead>
        <tbody>
            @foreach(var c in Alarms)
            {
                @if(c.Priority == Priority || Priority == 0)
                {
                     <tr class="item-table @c.ConditionName">
                    <td>@DateTime.Now.Date.ToString("d")</td>
                    <td>@DateTime.Now.ToString("T")</td>
                    <td>@c.Source</td>
                    <td>@c.Description</td>
                    <td>@c.ConditionName</td> @*@c.Priority*@
                </tr>
                }
               
            }
            
            
            
        </tbody>
    </table>
</div>

