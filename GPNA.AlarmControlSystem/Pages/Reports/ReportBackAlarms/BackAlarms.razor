@page "/reports/back-alarms"

@using GPNA.AlarmControlSystem.Pages.Reports.ReportBackAlarms.Components;
@using GPNA.AlarmControlSystem.Models.Enums

<div class="page-main">
    <div class="page-header justify-content-center">        
        <div class="d-flex align-items-center">
            <p>ОТЧЕТ О КОЛИЧЕСТВЕ ПРОСРОЧЕННЫХ СИГНАЛИЗАЦИЙ  <b>@(_fields?.FirstOrDefault(f => f.Id == FieldId)?.Name ?? "N/A") М/Р</b></p>
            <SelectObject Object="dto" LinksDictionary="WorkstationLinksDictionary"/>
            <p class="ms-2"><b>НА @DateTimeEnd.ToString("dd MMMM")</b></p>
        </div>        
    </div>
    <TableBackAlarms ExpiredAlarmsCount="_expiredAlarmsCount" WorkStations="_workstations"></TableBackAlarms>
    <BarChart IncomingAlarms="_expiredAlarmsCount?[1][AlarmType.Activation]"/>
</div>